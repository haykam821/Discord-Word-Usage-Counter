{
	"name": "discord-word-usage-counter",
	"version": "1.0.0",
	"description": "A Discord bot to count a word's usage.",
	"main": "./dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "node ./dist/index.js",
		"dev": "ts-node-dev --respawn ./src/index.ts",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint \"./**/*.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/haykam821/Discord-Word-Usage-Counter.git"
	},
	"keywords": [
		"discord",
		"bot"
	],
	"author": "haykam821",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/haykam821/Discord-Word-Usage-Counter/issues"
	},
	"homepage": "https://github.com/haykam821/Discord-Word-Usage-Counter#readme",
	"dependencies": {
		"debug": "^4.1.1",
		"discord.js": "^13.6.0",
		"discord.js-commando": "^0.12.2",
		"sqlite": "^4.0.25",
		"sqlite3": "^5.0.2",
		"string-format": "^2.0.0"
	},
	"devDependencies": {
		"@types/debug": "^4.1.7",
		"@types/node": "^17.0.23",
		"@types/sqlite3": "^3.1.8",
		"@types/string-format": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"eslint": "^8.13.0",
		"eslint-config-haykam": "^1.17.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.6.3"
	},
	"eslintConfig": {
		"extends": [
			"eslint-config-haykam",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"semi": "off",
			"@typescript-eslint/semi": "error",
			"no-shadow": "off",
			"@typescript-eslint/no-shadow": "error",
			"sort-imports": "error"
		}
	}
}
